<form method="post" action="/figures">

    <h2><label>Create New Figure</label></h2>

    <input type="text" id="figure_name" name="figure[name]">

    <br>

    <h2><label>Select Title</label></h2>

    <%Title.all.each do |t|%>
    <br>
    <input type="checkbox" id="title_<%=t.id%>" name="figure[title_ids][]" value=<%=t.id%>><%=t.name%>
    <%end%>

    <br>

    <h2><label>Create New Title</label></h2>

    
    <br>
    <input type="text" id="new_title" name="title[name]">

    <br>
    
    <h2><label>Select Landmark</label></h2>
    
    <%Landmark.all.each do |l|%>
    <br>
    <input type="checkbox" id="landmark_<%=l.id%>" name="figure[landmark_ids][]" value=<%=l.id%>><%=l.name%>
    <%end%>

     <h2><label>Create New Landmark</label></h2>

    <br>
    Landmark Name: <input type="text" id="new_landmark" name="landmark[name]">
    <br>
    <br>
    Year Completed: <input type="text" id="landmark_year_completed" name="landmark[year_completed]">
    <br>
    <br>
    <input type="submit" name="submt" value="Create New Figure">
</form>